{
    "net": {
        "type": "ConformerNet",
        "lossfn": "crf",
        "lamb": 0.01,
        "kwargs": {
            "num_cells": 16,
            "idim": 80,
            "hdim": 128,
            "num_classes": 218,
            "conv_multiplier":128,
            "delta_feats":false
        }
    },
    "scheduler": {
        "type": "SchedulerEarlyStop",
        "optimizer": {
            "type_optim": "Adam",
            "kwargs": {
                "lr": 1e-3,
                "betas": [
                    0.9,
                    0.99
                ],
                "weight_decay": 0.0
            }
        },
        "kwargs": {
            "epoch_min": 8,
            "lr_stop": 1e-5,
            "reverse_metric_direc": true
        }
    }
}
